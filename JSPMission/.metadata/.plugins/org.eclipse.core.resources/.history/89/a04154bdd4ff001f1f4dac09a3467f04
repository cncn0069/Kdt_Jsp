<%@page import="java.sql.ResultSetMetaData"%>
<%@page import="java.sql.ResultSet"%>
<%@page import="common.JDBCConnect"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>

<form action="ExeQueryForm.jsp" method="post">
		<label for="id">id:</label> 
		<input type="text" id="id"
			name="id" value="" placeholder="값을 입력하세요"> <br>
		<input type="submit" value="Submit">
	</form>

	<%
	String id = request.getParameter("id");
	
	if(id != null)
	{
		JDBCConnect jdbc = new JDBCConnect();

		jdbc.setSt(jdbc.getCon().createStatement());

		ResultSet rs = jdbc.getSt().executeQuery("SELECT title,content FROM member WHERE id='"+ id +"'");
		ResultSetMetaData mtrs = rs.getMetaData();

		out.print("<table>");
		out.print("<thead>");
		out.print("<tr>");
		for (int i = 1; i < mtrs.getColumnCount(); i++) {
			out.print("<th>" + mtrs.getColumnName(i) + "</th>");
		}
		out.print("</tr>");
		out.print("</thead>");
		out.print("<tbody>");
		while (rs.next()) {
			out.print("<tr>");
			out.print("<td>" + rs.getString("num") + "</td>");
			out.print("<td>" + rs.getString("title") + "</td>");
			out.print("<td>" + rs.getString("postdate") + "</td>");
			out.print("<td>" + rs.getString("visitcount") + "</td><br>");
			out.print("</tr>");
		}
		out.print("</tbody>");
		out.print("</table>");
	}
	
	%>
</body>
</html>